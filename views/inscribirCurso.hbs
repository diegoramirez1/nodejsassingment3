{{>header}}

    <div class="container">
        <form action="/inscribirCursoResult" method="post">
            <h3> Seleccione un curso por favor </h3>
            {{{listarCursosInscripcion lista}}}
            <br>
            <h3> Verifique sus datos </h3>
            
            <div clas="form-group">
                <label for="numdoc">Numero de Documento</label>
                <input type="number" class="form-control" id="numdoc" name="numeroDocumento" value="{{documento}}" readonly>
            </div>
            <div clas="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" id="name" name="nombre" value="{{nombre}}" readonly>
            </div> 
            <div clas="form-group">
                <label for="email">Correo Electronico</label>
                <input type="email" class="form-control" id="email" name="correo" value="{{correo}}" readonly>
            </div>
            <div clas="form-group">
                <label for="telf">Telefono</label>
                <input type="number" id="telf" class="form-control" name="telefono" value="{{telefono}}" readonly>
            </div>
            <br>
            <a class="btn btn-dark" href="/miPerfil" role="button">Modificar datos</a>
            <button class="btn btn-primary">Inscribir Curso</button>
        </form>

        <br>
        {{mensaje}}
    </div>

{{>footer}}